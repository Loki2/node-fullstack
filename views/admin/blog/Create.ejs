<%- include('../../partial/adminheader') %>
<%- include('../../partial/adminnavbar') %>
<%- include('../../partial/adminsidebar') %>
  <main>
    <div class="container-fluid">
      <section class="section card mb-5">

        <div class="card-body">
          <h5 class="pb-5">Create New Blog Content</h5>
          <form action="" method="post">
          <div class="row">
            
            <div class="col-md-6 mb-4">
              <div class="md-form">
                <input type="text" id="writter" name="writter" class="form-control">
                <label for="" class="">ຜູ້ຂຽນ:</label>
              </div>
            </div>
            <div class="col-md-6 mb-4">
              <div class="md-form">
                <input type="text" id="title" name="title" class="form-control">
                <label for="" class="">ຫົວຂໍ້:</label>
              </div>
            </div>

            <div class="col-md-12 mb-4">
              <div class="md-form">
                <input type="text" id="subtitle" name="subtitle" class="form-control">
                <label for="" class="">ອະທິບາຍຫົວຂໍ້:</label>
              </div>

              <div class="md-form">
                <textarea type="text" id="desc" name="desc" class="md-textarea form-control" rows="5"></textarea>
                <label for="">ບົດຄວາມເຕັມ:</label>
              </div>


              <fieldset class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox1" checked="checked">
                <label class="form-check-label" for="checkbox1">Publish Status:</label>
              </fieldset>
            </div>
            <div class="col-md-6 mb-4">
              <div class="md-form">
                <input type="text" id="category" name="category" class="form-control">
                <label for="" class="">ເລືອກປະເພດ:</label>
              </div>
            </div>
            <div class="col-md-6 mb-4">
              <div class="md-form">
                <input type="text" id="tags" name="tags" class="form-control">
                <label for="" class="">ເລືອກໝວດ:</label>
              </div>
            </div>
            <div class="col-md-6 mb-4"> 
            <form action="#">
              <div class="md-form">
                <div class="file-field">
                  <div class="btn btn-primary btn-sm float-left">
                    <span>Choose files</span>
                    <input type="file" multiple>
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Upload one or more files">
                  </div>
                </div>
              </div>
            </form>
            </div>         
        </div>
        <div class="form-group">
          <a href="/admin/blogs" class="btn btn-teal">Publish Now</a>
          <a href="/admin/blogs/view">View before public</a>
        </div>
      </form>
      </section>
    </div>


    
  </main>
  <!-- Main layout -->
<%- include('../../partial/adminscript') %>
