<%- include('../../partial/adminheader') %>
<%- include('../../partial/adminnavbar') %>
<%- include('../../partial/adminsidebar') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    

    <!-- Main content -->
    <section class="content">
     
      <!-- SELECT2 EXAMPLE -->
      <div class="box box-primary">
        
        <div class="box-body">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">ບໍລິການທັງໝົດ</h3>
              <button type="button" class="btn pull-right btn-primary" data-toggle="modal" data-target="#modal-default">
                ສ້າງບໍລິການໃໝ່
              </button>
            </div>
           
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>ຫົວຂໍ</th>
                  <th>ກ່ຽວກັບ</th>
                  <th>ຕົວເລືອກ</th>
                </tr>
                </thead>
                <% services.forEach(service => {%> 
                <tbody>
                    <tr>
                      <td><%= service.title %> </td>
                      <td><%= service.desc %></td>
                      <td>
                        <a href="/admin/pages" class="btn btn-warning"><i class="fa  fa-pencil-square-o"></i></a>
                        <a href="/admin/pages" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                      </td>
                    </tr>
                </tbody>
                <% })  %> 
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
    </section>
    <div class="modal fade" id="modal-default">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">ຟອມປ້ອນຂໍ້ມູນບໍລິການໃຫມ່</h4>
          </div>
          <div class="modal-body">
            <form role="form" action="/admin/service" method="post">
              <div class="box-body col-md-12">
                <div class="form-group">
                  <label for="pagename">ຫົວຂໍ:</label>
                  <input type="text" class="form-control" name="title" placeholder="ປ້ອນຫົວຂໍ..." required>
                </div>
                <div class="form-group">
                  <label for="desc">ກ່ຽວກັບ:</label>
                  <textarea class="form-control" name="desc" placeholder="ອະທິບາຍກ່ຽວກັບ...!" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" required></textarea>
                </div>
              </div>
              <div class="box-footer">
                <a href="/admin/service" type="button" class="btn pull-left btn-warning">ກັບຄືນ</a>
                <button type="submit" class="btn pull-right btn-primary">ຈັດເກັບຂໍ້ມູນ</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

    
  </div>
<%- include('../../partial/adminfooter') %>